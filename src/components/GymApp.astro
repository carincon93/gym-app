---
import background from "@/assets/background.svg";

import BodyCanvas from "./BodyCanvas";
---

<div>
  <img id="background" src={background.src} alt="" fetchpriority="high" />
  <main>
    <div class="md:w-5/12 mx-auto">
      <BodyCanvas client:load />
    </div>
  </main>
</div>

<style>
  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: blur(100px);
  }
</style>
